# Development Environment Variables
NODE_ENV=development
PORT=3000

# Application URL (Local development)
APP_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# Redis Configuration (Development - Local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=300
REDIS_TLS=false

# Application Security (Development)
JWT_SECRET=dev_jwt_secret_key_123
API_KEY=dev_api_key_123

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Rate Limiting (Development - More lenient)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000

# CORS Configuration (Development)
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Swagger Documentation (Enable in development)
SWAGGER_ENABLED=true
SWAGGER_PATH=docs

# Health Check
HEALTH_CHECK_ENABLED=true

# Database (if needed later)
DATABASE_URL=postgresql://username:password@localhost:5432/evacuation_db_dev

# Monitoring
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=300
DISTANCE_CACHE_TTL=86400

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
